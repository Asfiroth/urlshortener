@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form method="post">
        <h1>Url Shortener</h1>
        <div>
            <label>Please enter the url you wnat to be shortened:</label>
            <input type="text" placeholder="url" asp-for="@Model.UrlToTransform"/>
        
        </div>
        <input type="submit" value="Send" asp-page-handler="post"/>
    </form>
    
    <a href="@Model.Shortened" target="_blank">@Model.Shortened</a>
    
</div>
